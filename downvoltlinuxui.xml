      <include name="../java-1.11.0-openjdk-amd64!/jdk.security.jgss"/>
      <include name="../java-1.11.0-openjdk-amd64!/jdk.unsupported"/>
      <include name="../java-1.11.0-openjdk-amd64!/jdk.unsupported.desktop"/>
      <include name="../java-1.11.0-openjdk-amd64!/jdk.xml.dom"/>
      <include name="../java-1.11.0-openjdk-amd64!/jdk.zipfs"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.11}"/>
  <property name="project.jdk.bin" value="${jdk.bin.11}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.11"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.miglayout.classpath">
    <pathelement location="${basedir}/lib/miglayout-core.jar"/>
    <pathelement location="${basedir}/lib/miglayout-swing.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module DownvoltLinuxUi -->
  
  <dirname property="module.downvoltlinuxui.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.downvoltlinuxui" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.downvoltlinuxui" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.downvoltlinuxui" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.downvoltlinuxui" value="-encoding UTF-8 -source 11 -target 11 ${compiler.args}"/>
  
  <property name="downvoltlinuxui.output.dir" value="${module.downvoltlinuxui.basedir}/out/production/DownvoltLinuxUi"/>
  <property name="downvoltlinuxui.testoutput.dir" value="${module.downvoltlinuxui.basedir}/out/test/DownvoltLinuxUi"/>
  
  <path id="downvoltlinuxui.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="downvoltlinuxui.module.production.classpath">
    <path refid="${module.jdk.classpath.downvoltlinuxui}"/>
    <path refid="library.miglayout.classpath"/>
  </path>
  
  <path id="downvoltlinuxui.runtime.production.module.classpath">
    <pathelement location="${downvoltlinuxui.output.dir}"/>
    <path refid="library.miglayout.classpath"/>
  </path>
  
  <path id="downvoltlinuxui.module.classpath">
    <path refid="${module.jdk.classpath.downvoltlinuxui}"/>
    <pathelement location="${downvoltlinuxui.output.dir}"/>
    <path refid="library.miglayout.classpath"/>
  </path>
  
  <path id="downvoltlinuxui.runtime.module.classpath">
    <pathelement location="${downvoltlinuxui.testoutput.dir}"/>
    <pathelement location="${downvoltlinuxui.output.dir}"/>
    <path refid="library.miglayout.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.downvoltlinuxui">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.downvoltlinuxui">
    <patternset refid="excluded.from.module.downvoltlinuxui"/>
  </patternset>
  
  <path id="downvoltlinuxui.module.sourcepath">
    <dirset dir="${module.downvoltlinuxui.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.downvoltlinuxui" depends="compile.module.downvoltlinuxui.production,compile.module.downvoltlinuxui.tests" description="Compile module DownvoltLinuxUi"/>
  
  <target name="compile.module.downvoltlinuxui.production" depends="register.custom.compilers" description="Compile module DownvoltLinuxUi; production classes">
    <mkdir dir="${downvoltlinuxui.output.dir}"/>
    <javac2 destdir="${downvoltlinuxui.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.downvoltlinuxui}/javac">
      <compilerarg line="${compiler.args.downvoltlinuxui}"/>
      <bootclasspath refid="downvoltlinuxui.module.bootclasspath"/>
      <classpath refid="downvoltlinuxui.module.production.classpath"/>
      <src refid="downvoltlinuxui.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.downvoltlinuxui"/>
    </javac2>
    
    <copy todir="${downvoltlinuxui.output.dir}">
      <fileset dir="${module.downvoltlinuxui.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.downvoltlinuxui.tests" depends="register.custom.compilers,compile.module.downvoltlinuxui.production" description="compile module DownvoltLinuxUi; test classes" unless="skip.tests"/>
  
  <target name="clean.module.downvoltlinuxui" description="cleanup module">
    <delete dir="${downvoltlinuxui.output.dir}"/>
    <delete dir="${downvoltlinuxui.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.downvoltlinuxui" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.downvoltlinuxui" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>